@model List<DotnetXlSheetImportTamer.Models.NVPCisco>

@{
    ViewData["Title"] = "Index";
}

    <div class="container">
        <div>
            <h4 class="justify-content-center">Search Result</h4>
            <br />
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <form asp-controller="ImportExcel" asp-action="SearchResults" enctype="multipart/form-data" method="post">
                        <div class="input-group mb-3">
                            <input type="text" class="form-control" placeholder="Search ..." aria-label="Recipient Results" name="term" value="" />
                            <button class="btn btn-outline-secondary" type="submit">Search</button>
                        </div>
                    </form>
                    
                </div>
            </div>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Brand

                    </th>
                    <th>
                        Category Code
                    </th>
                    <th>
                        Manufacturer
                    </th>
                    <th>
                        Part SKU
                    </th>

                    <th>
                        Item Description
                    </th>
                    <th>
                        PriceList
                    </th>
                    <th>
                        Min Discount
                    </th>
                    <th>
                        Discount Price
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Brand)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CategoryCode)
                        </td>
                        <td>
                            @Html.DisplayFor((modelItem => item.Manufacturer))
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PartSKU)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ItemDescription)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PriceList)  <span>$</span>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MinDiscount)  <span>%</span>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DiscountPrice) <span>$</span>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
        <div class="col-12 text-center">
            <div>


                @if (ViewBag.CurrentPage - 1 > 0)
                {
                    <a href="/ImportExcel/Index/?RequiredPage=@(ViewBag.CurrentPage - 1)" class="btn btn-outline-primary btn-lg align-left">Prev</a>
                }
                @if (ViewBag.CurrentPage + 1 <= ViewBag.PagesCount)
                {
                    <a href="/ImportExcel/Index/?RequiredPage=@(ViewBag.CurrentPage + 1)" class="btn btn-outline-primary btn-lg align-right">Next</a>
                }
            </div>


        </div>
    </div>

